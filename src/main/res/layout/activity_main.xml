        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Main_IMG_Pan15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/frying_pan_and_fried_egg_svgrepo_com" />
    </LinearLayout>

    <!--    Pans 6-->

    <LinearLayout
        android:id="@+id/Main_PanRow_6"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Main_IMG_Pan16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/frying_pan_and_fried_egg_svgrepo_com" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Main_IMG_Pan17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/Separator_margin"
            android:visibility="invisible"
            app:srcCompat="@drawable/frying_pan_and_fried_egg_svgrepo_com"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Main_IMG_Pan18"
