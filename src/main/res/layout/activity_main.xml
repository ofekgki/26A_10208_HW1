<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/farm"
    android:layoutDirection="rtl"
    tools:context=".MainActivity">

    <!--     Hearts-->

    <LinearLayout
        android:id="@+id/Main_Hearts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/Default_Margin"
        android:layout_marginRight="@dimen/Default_Margin">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Main_IMG_Heart_L"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/heart_svgrepo_com" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Main_IMG_Heart_M"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/heart_svgrepo_com" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Main_IMG_Heart_R"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/heart_svgrepo_com" />

    </LinearLayout>

    <!--    Roosters-->

    <LinearLayout
        android:id="@+id/Main_Roosters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/Lane_Start">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Main_IMG_Rooster_R"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            app:srcCompat="@drawable/rooster_svgrepo_com"

            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Main_IMG_Rooster_M"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/Separator_margin"
            android:layout_weight="1"
            app:srcCompat="@drawable/rooster_svgrepo_com" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Main_IMG_Rooster_L"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            app:srcCompat="@drawable/rooster_svgrepo_com" />

    </LinearLayout>

    <!--Pans Container-->
    <LinearLayout
        android:id="@+id/Main_Pans_Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Main_Hearts"
        android:layout_above="@id/Main_FAB_Right"
        android:weightSum="6"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        
    <!--    Pans 1-->

    <LinearLayout
        android:id="@+id/Main_PanRow_1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Main_IMG_Pan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/frying_pan_and_fried_egg_svgrepo_com" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Main_IMG_Pan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/Separator_margin"
            android:visibility="invisible"
            app:srcCompat="@drawable/frying_pan_and_fried_egg_svgrepo_com" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Main_IMG_Pan3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/frying_pan_and_fried_egg_svgrepo_com" />

    </LinearLayout>

    <!--    Pans 2-->

