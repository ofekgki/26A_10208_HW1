            android:visibility="invisible"
            app:srcCompat="@drawable/frying_pan_and_fried_egg_svgrepo_com"
            />
    </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/farm" />

    </LinearLayout>

    <!--    Fabs-->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Main_FAB_Left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/Default_Margin"
        android:clickable="true"
        android:contentDescription="@string/left_arrow"
        app:fabCustomSize="@dimen/Fab_Default_Size"
        android:layoutDirection="ltr"
        app:srcCompat="@drawable/left_2_svgrepo_com"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Main_FAB_Right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/Default_Margin"
        android:clickable="true"
        android:contentDescription="@string/right_arrow"
        app:fabCustomSize="@dimen/Fab_Default_Size"
        android:layoutDirection="ltr"
        app:srcCompat="@drawable/right_2_svgrepo_com"
        />


</RelativeLayout>